<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".mapa_freguesia">


    <!--    <ScrollView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:fillViewport="true">-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/image_slider"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:sliderAnimationDuration="3000"
            app:sliderAutoCycleDirection="back_and_forth"
            app:sliderAutoCycleEnabled="true"
            app:sliderIndicatorAnimationDuration="600"
            app:sliderIndicatorGravity="center_horizontal|bottom"
            app:sliderIndicatorMargin="15dp"
            app:sliderIndicatorOrientation="horizontal"
            app:sliderIndicatorPadding="3dp"
            app:sliderIndicatorRadius="2dp"
            app:sliderIndicatorSelectedColor="#5A5A5A"
            app:sliderIndicatorUnselectedColor="#FFF"
            app:sliderScrollTimeInSec="5"
            app:sliderStartAutoCycle="true" />
<!--        <ImageView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:alpha="0.5"-->
<!--            android:scaleType="centerCrop"-->
<!--            android:src="@drawable/freguesia_mapa" />-->
        <View
            android:id="@+id/containerComponents"
            style="@style/ConstantComponents"
            android:layout_width="match_parent"
            android:layout_height="472dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="313dp"
            app:layout_constraintBottom_toBottomOf="parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/containerComponents"
            android:layout_alignBottom="@+id/containerComponents">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.dashboard.DashboardFragment"
                android:orientation="vertical"
                tools:ignore="MissingDefaultResource"
                android:layout_margin="15dp"
                android:id="@+id/regioes">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Freguesia do ó"
                        android:textSize="30dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat_medium"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Principas informações coletadas da região sobre os moradores de rua residentes!"
                        android:fontFamily="@font/montserrat_medium"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        app:cardCornerRadius="15dp"
                        android:layout_marginTop="20dp"

                        >

                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/darkred"
                            android:padding="10dp"
                            android:id="@+id/primeiro">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/button"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="1dp"
                                android:background="@drawable/ic_baseline_arrow_forward_24" />

                            <TextView
                                android:id="@+id/t1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="1dp"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="Freguesia"
                                android:textColor="@color/white"
                                android:textSize="30sp"
                                android:textStyle="bold" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/t1"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/montserrat_regular"
                                android:text="Freguesia do Ó é localizada no Noroeste da Região de São Paulo"
                                android:textColor="@color/white" />
                            <!--            <androidx.cardview.widget.CardView-->
                            <!--                android:layout_width="120dp"-->
                            <!--                android:layout_height="100dp"-->
                            <!--                android:layout_alignParentRight="true"-->
                            <!--                android:maxHeight="100dp"-->
                            <!--                app:cardCornerRadius="15dp"-->
                            <!--                >-->
                            <!--            <ImageView-->
                            <!--                android:layout_width="match_parent"-->
                            <!--                android:layout_height="match_parent"-->
                            <!--                android:scaleType="centerCrop"-->
                            <!--                android:src="@drawable/freguesia"-->
                            <!--                />-->
                            <!--            </androidx.cardview.widget.CardView>-->
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <include layout="@layout/toolbar" />
    </RelativeLayout>

    <!--    </ScrollView>-->
</LinearLayout>






