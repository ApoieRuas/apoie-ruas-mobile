<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mask="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbarThumbVertical="@null">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".One">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:id="@+id/name"
        style="@style/editText1"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Nome Completo"
        android:inputType="textPersonName"
        android:drawablePadding="14dp"
        android:drawableLeft="@drawable/ic_outline_account_circle_24"
        android:singleLine="true"
        android:drawableTint="@color/black"
        android:textColorHint="@color/black"
        android:fontFamily="@font/montserrat_medium"
        />

    <EditText
        android:id="@+id/email"
        style="@style/editText1"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="85dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Digite Seu E-mail"
        android:inputType="textEmailAddress"
        android:drawablePadding="14dp"
        android:singleLine="true"
        android:drawableLeft="@drawable/ic_email"
        android:textColorHint="@color/black"
        android:fontFamily="@font/montserrat_medium"
        />

    <EditText
        android:id="@+id/cpf"
        style="@style/editText1"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="170dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Digite Seu CPF"
        android:inputType="number"
        android:drawablePadding="14dp"
        android:singleLine="true"
        android:drawableLeft="@drawable/ic_note"
        android:textColorHint="@color/black"
        android:fontFamily="@font/montserrat_medium"
        />
    <EditText
        android:id="@+id/phone"
        style="@style/editText1"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="255dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Digite Seu Telefone"
        android:inputType="number"
        android:drawablePadding="14dp"
        android:singleLine="true"
        android:drawableLeft="@drawable/ic_phone"
        android:textColorHint="@color/black"
        android:fontFamily="@font/montserrat_medium"
        />


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:gravity="center"
        android:padding="0dp"
        app:hintEnabled="false"
        app:passwordToggleEnabled="true"
        app:startIconTint="@color/black"
        app:startIconDrawable="@drawable/ic_key"
        app:passwordToggleDrawable="@drawable/ic_eye"
        app:passwordToggleTint="@color/black">
        <EditText
            android:id="@+id/password"
            style="@style/editText1"
            android:fontFamily="@font/montserrat_medium"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColorHint="@color/black"
            android:hint="Digite Sua Senha"
            android:inputType="numberPassword"
            android:singleLine="true"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="425dp"
        android:gravity="center"
        android:padding="0dp"
        app:hintEnabled="false"
        app:passwordToggleEnabled="true"
        app:startIconTint="@color/black"
        app:startIconDrawable="@drawable/ic_key"
        app:passwordToggleDrawable="@drawable/ic_eye"
        app:passwordToggleTint="@color/black"
       >
        <EditText
            android:id="@+id/password2"
            style="@style/editText1"
            android:fontFamily="@font/montserrat_medium"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="Repita Sua Senha"
            android:textColorHint="@color/black"
            android:singleLine="true"
            android:inputType="numberPassword"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/BotÃ£o_cadastrar"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="525dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="25dp"
        android:text="CADASTRAR"
        android:fontFamily="@font/montserratsemibold"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</FrameLayout>
</ScrollView>