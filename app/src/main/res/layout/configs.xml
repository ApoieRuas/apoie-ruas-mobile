<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar_configs" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/barra_de_pesquisa"
        style="@style/Edit_Text4"
        android:layout_width="286dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:singleLine="true"
        app:iconifiedByDefault="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:queryHint="Pesquise Configurações" />

    <RelativeLayout
        android:id="@+id/adicionar_quem_somos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/barra_de_pesquisa">


        <TextView
            android:id="@+id/texto_quem_somos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:drawablePadding="5dp"
            android:drawableTint="@color/black"
            android:fontFamily="@font/montserrat_medium"
            android:text="Minha Conta"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_baseline_account_circle_24_black" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/minha_conta"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:backgroundTint="@color/black" />

    </RelativeLayout>

    <View
        android:id="@+id/divisor_sobre_fundadores"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:background="@color/black_overlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adicionar_quem_somos" />

    <RelativeLayout
        android:id="@+id/adicionar_fundadores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divisor_sobre_fundadores">

        <TextView
            android:id="@+id/texto_fundadores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:drawablePadding="5dp"
            android:drawableTint="@color/black"
            android:fontFamily="@font/montserrat_medium"
            android:text="Informações Legais"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_baseline_lock_24" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/info"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:backgroundTint="@color/black" />

    </RelativeLayout>
    <!--Fim-->

    <!--Colaboradores-->
    <View
        android:id="@+id/divisor_sobre_colaboradores"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:background="@color/black_overlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adicionar_fundadores" />

    <RelativeLayout
        android:id="@+id/adicionar_colaboradores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divisor_sobre_colaboradores">

        <TextView
            android:id="@+id/texto_colaboradores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:drawablePadding="5dp"
            android:drawableTint="@color/black"
            android:fontFamily="@font/montserrat_medium"
            android:text="Fale Conosco"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_baseline_headphones_24" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fale_conosco"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:backgroundTint="@color/black" />

    </RelativeLayout>
    <!--Fim-->

    <!--Versão do Software-->
    <View
        android:id="@+id/divisor_sobre2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:background="@color/black_overlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adicionar_colaboradores" />

    <RelativeLayout
        android:id="@+id/adicionar_versao_do_software"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divisor_sobre2">

        <TextView
            android:id="@+id/texto_versao_do_software"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:drawablePadding="5dp"
            android:drawableTint="@color/black"
            android:fontFamily="@font/montserrat_medium"
            android:text="Apoie Ruas Web"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_baseline_language_24" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/apoie_ruas_web"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:backgroundTint="@color/black" />

    </RelativeLayout>
    <!--Fim-->

    <View
        android:id="@+id/divisor_faq"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:background="@color/black_overlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adicionar_versao_do_software" />

    <RelativeLayout
        android:id="@+id/faq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divisor_faq">

        <TextView
            android:id="@+id/texto_faq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:drawablePadding="5dp"
            android:drawableTint="@color/black"
            android:fontFamily="@font/montserrat_medium"
            android:text="Perguntas Frequentes"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_baseline_help_24" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_faq"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:backgroundTint="@color/black" />

    </RelativeLayout>

    <!--Informações Legais-->
    <View
        android:id="@+id/divisor_sobre3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:background="@color/black_overlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/faq" />

    <RelativeLayout
        android:id="@+id/adicionar_informações_legais"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divisor_sobre3">

        <TextView
            android:id="@+id/texto_informações_legais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:drawablePadding="5dp"
            android:drawableTint="@color/black"
            android:fontFamily="@font/montserrat_medium"
            android:text="Sobre o Aplicativo"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_baseline_info_24" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sobre_app"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:backgroundTint="@color/black" />

    </RelativeLayout>
    <!--Fim-->
</androidx.constraintlayout.widget.ConstraintLayout>