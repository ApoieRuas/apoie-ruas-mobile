<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/perfil_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.perfil.fragment_perfil"
    tools:ignore="MissingDefaultResource">

    <include
        android:id="@+id/include2"
        layout="@layout/toolbar_user" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp">

                <TextView
                    android:id="@+id/ola"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Olá!"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/nome_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/montserratsemibold"
                    android:text="José Leonardo Souza Santos"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:layout_below="@+id/ola"
                    android:textSize="23sp" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/user"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:layout_below="@+id/nome_main"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/leaoperfil"
                    android:padding="50dp"
                    app:cardCornerRadius="1000dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/leaoperfil" />

                </androidx.cardview.widget.CardView>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:scrollbarThumbVertical="@null"
                    android:layout_below="@+id/user"
                    android:layout_marginTop="15dp"
                    tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user">


                        <TextView
                            android:id="@+id/texto_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:drawablePadding="5dp"
                            android:drawableTint="@color/black"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Nome"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:drawableStartCompat="@drawable/ic_outline_account_circle_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/texto_name"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="7dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="José Leonardo Souza Santos"
                            android:textColor="@color/black" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/edit1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="30dp"
                            android:background="@drawable/ic_outline_edit_24"
                            android:backgroundTint="@color/black" />

                    </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:layout_marginTop="15dp">


                    <TextView
                        android:id="@+id/texto_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:drawablePadding="5dp"
                        android:drawableTint="@color/black"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Email"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:drawableStartCompat="@drawable/ic_outline_email_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/texto_email"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="joseleonardosantoos@outlook.com"
                        android:textColor="@color/black" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/edit2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="30dp"
                        android:background="@drawable/ic_outline_edit_24"
                        android:backgroundTint="@color/black" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/cpf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/email"
                    android:layout_marginTop="15dp">


                    <TextView
                        android:id="@+id/texto_cpf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:drawablePadding="5dp"
                        android:drawableTint="@color/black"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="CPF"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:drawableStartCompat="@drawable/ic_outline_assignment_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/texto_cpf"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="399.295.618/03"
                        android:textColor="@color/black" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/edit3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="30dp"
                        android:background="@drawable/ic_outline_edit_24"
                        android:backgroundTint="@color/black" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cpf"
                    android:layout_marginTop="15dp">


                    <TextView
                        android:id="@+id/texto_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:drawablePadding="5dp"
                        android:drawableTint="@color/black"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Telefone"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:drawableStartCompat="@drawable/ic_phone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/texto_phone"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="55+ (11) 99457-3560"
                        android:textColor="@color/black" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/edit4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="30dp"
                        android:background="@drawable/ic_outline_edit_24"
                        android:backgroundTint="@color/black" />

                </RelativeLayout>
                </LinearLayout>
                </ScrollView>
            </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>