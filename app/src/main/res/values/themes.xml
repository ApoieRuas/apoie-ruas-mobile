<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ApoieRuas" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="ConstantComponents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">700dp</item>
        <item name="android:background">@drawable/container_components_entrar</item>
    </style>

    <style name="TabLayout" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="editText1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text1</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginLeft">34dp</item>
        <item name="android:layout_marginRight">34dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">325dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginLeft">34dp</item>
        <item name="android:layout_marginRight">34dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="Theme.ApoieRuas.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/montserratsemibold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ThemeOverlay.ApoieRuas.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>


</resources>